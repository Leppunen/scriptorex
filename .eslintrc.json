{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 9
    },
    "globals": {
        "bot": false,
        "util": false
    },
    "rules": {
        "indent": ["warn", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": "warn",
        "no-unused-vars": "warn",
        "require-jsdoc": "off",
        "new-cap": "warn",
        "no-undef": "off",
        "max-len": ["warn", 250, {"ignoreStrings": true, "ignoreTemplateLiterals": true}],
        "eqeqeq": "error",
        "no-throw-literal": "error",
        "no-multiple-empty-lines": ["error", {"maxEOF": 1, "max": 2}]
    }
}